{
  "compilerOptions": {
    "outDir": "./es",
    "allowJs": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "types": [
      "node"
    ],
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "packages/*/ts/**/*.ts"
  ],
  "compileOnSave": true
}